{
  "hr": {
    "@type": "codeCss",
    "lastReviewed": "2025-11-16",
    "code": [
      {"hr": {
        "display": "block",
        "color": "gray",
        "border-style": "inset",
        "border-width": "1px",
        "margin-block": "0.5em",
        "margin-inline": "auto",
        "overflow": "hidden",
        "unicode-bidi": "isolate"
      }},
      {"hr[align=left i]": {
        "margin-left": "0",
        "margin-right": "auto"
      }},
      {"hr[align=right i]": {
        "margin-left": "auto",
        "margin-right": "0"
      }},
      {"hr[align=center i]": {
        "margin-left": "auto",
        "margin-right": "auto"
      }},
      {"hr[color], hr[noshade]": {
        "border-style": "solid"
      }}
    ],
    "reference": [
      {
        "title":   "HTML Living Standard. 15 Rendering 15.3.3 Flow content. Last Updated 13 November 2025",
